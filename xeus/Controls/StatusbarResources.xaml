<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<!-- Resource dictionary entries should be defined here. -->
	<Style x:Key="StatusBarStyleBlack" TargetType="{x:Type StatusBar}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type StatusBar}">
					<Grid>
						<Border SnapsToDevicePixels="True" CornerRadius="0,0,4,4" BorderBrush="#FF3A3A3A" BorderThickness="0,1,0,0">
							<ItemsPresenter TextElement.Foreground="#FFFFFFFF" Margin="4,2,4,2"/>
						</Border>
						<Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Panel.ZIndex="-1" Fill="#41000000">
							<Rectangle.BitmapEffect>
								<DropShadowBitmapEffect Direction="90" Opacity="1" ShadowDepth="2" Softness="0.7" Color="#FF000000"/>
							</Rectangle.BitmapEffect>
						</Rectangle>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	<ItemsPanelTemplate x:Key="StatusMenuItemTemplate">
		<StackPanel IsItemsHost="True"/>
	</ItemsPanelTemplate>

</ResourceDictionary>