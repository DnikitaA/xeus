<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<!-- Resource dictionary entries should be defined here. -->
	<Style x:Key="StatusBarStyleBlack" TargetType="{x:Type StatusBar}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type StatusBar}">
					<Grid>
						<Border SnapsToDevicePixels="True" CornerRadius="0,0,4,4" BorderThickness="0,1,0,0">
							<ItemsPresenter TextElement.Foreground="#FFFFFFFF" Margin="4,2,4,2"/>
						</Border>
						<Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Panel.ZIndex="-1" Fill="#41000000"/>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	<ItemsPanelTemplate x:Key="StatusMenuItemTemplate">
		<StackPanel IsItemsHost="True"/>
	</ItemsPanelTemplate>

</ResourceDictionary>