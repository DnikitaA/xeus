<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:local="clr-namespace:xeus.Core"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="xeus.Controls.MessageWindow"
    Title="xeus.Controls" Height="300" Width="300"
	WindowStyle="None" AllowsTransparency="True"
    ResizeMode="CanResizeWithGrip" BorderBrush="#FF1E1E1E" BorderThickness="2,2,2,2"
    >

    <Grid>
    	<Rectangle Fill="#FF484848" Stroke="#FF000000" VerticalAlignment="Top" Height="32"/>
    	<TabControl x:Name="_tabs" ContentTemplate="{StaticResource RosterItemMessagesTemplate}" Margin="0,36,0,0" />
	</Grid>
</Window>
