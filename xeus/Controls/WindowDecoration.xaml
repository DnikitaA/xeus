    <Setter Property="BorderThickness" Value="2,2,2,2" />
  	<Setter Property="Background">
  		<Setter.Value>
  			<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
  				<GradientStop Color="#FF0B0B0B" Offset="0.005"/>
