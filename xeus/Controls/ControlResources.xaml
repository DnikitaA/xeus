<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:xeus.Core"
    xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2006" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    x:Class="xeus.Controls.ControlResource"
    >

  <!-- services -->
  <CollectionViewSource
          x:Key="ServicesView"
          Source="{Binding Path=Services.Items}"
          />

  <DataTemplate DataType="{x:Type local:ServiceItem}">
    <Grid>
      <TextBlock Text="{Binding Path=Name}" />
    </Grid>
  </DataTemplate>
 
 <!-- roster -->
  <CollectionViewSource x:Key="_rosterView" Source="{Binding Path=Roster.Items}">
    <CollectionViewSource.SortDescriptions>
      <scm:SortDescription PropertyName="DisplayName" />
      <scm:SortDescription PropertyName="StatusText" />
    </CollectionViewSource.SortDescriptions>    <CollectionViewSource.GroupDescriptions>
		<PropertyGroupDescription PropertyName="Group"/>
    </CollectionViewSource.GroupDescriptions>
  </CollectionViewSource>
	
	<DataTemplate x:Key="RosterItemTip" DataType="{x:Type local:RosterItem}">
		<Grid RenderTransformOrigin="0.5,0.5"
				Height="112" Width="232" Panel.ZIndex="1" >
			<Grid.RenderTransform>
				<TransformGroup>
					<ScaleTransform ScaleX="1" ScaleY="1"/>
					<SkewTransform AngleX="0" AngleY="0"/>
					<RotateTransform Angle="0"/>
					<TranslateTransform X="0" Y="0"/>
				</TransformGroup>
			</Grid.RenderTransform>
			<Rectangle Width="Auto" Height="Auto" RadiusX="5" RadiusY="5" Margin="8,8,8,8" Stroke="#FF000000" Opacity="0.605">
				<Rectangle.Fill>
					<ImageBrush Viewport="0,0,10,10"
			      				ViewportUnits="Absolute"
				   				TileMode="Tile" Stretch="None" ImageSource="/Images/stripes.png"/>
				</Rectangle.Fill>
				<Rectangle.OpacityMask>
					<RadialGradientBrush>
						<GradientStop Color="#00FFFFFF" Offset="1"/>
						<GradientStop Color="#FF000000" Offset="0"/>
						<GradientStop Color="#7E9A9A9A" Offset="0.601"/>
					</RadialGradientBrush>
				</Rectangle.OpacityMask>
			</Rectangle>
			<Rectangle SnapsToDevicePixels="True" Width="Auto" Height="Auto" RadiusX="4" RadiusY="4" Margin="8,8,8,8" Stroke="#FF3E3E3E" Opacity="0.825" >
				<Rectangle.Fill>
					<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
						<GradientStop Color="#FF2C2C2C" Offset="0"/>
						<GradientStop Color="#FF484848" Offset="0.986"/>
					</LinearGradientBrush>
				</Rectangle.Fill>
				<Rectangle.BitmapEffect>
					<DropShadowBitmapEffect Direction="274" Opacity="0.335" ShadowDepth="1" Softness="0.37"/>
				</Rectangle.BitmapEffect>
			</Rectangle>
			<Image HorizontalAlignment="Left" Source="{Binding Path=Image}" Grid.Row="0" 
				VerticalAlignment="Stretch" Stretch="Uniform" Width="56" Height="Auto" Margin="16,16,0,32" d:LayoutOverrides="GridBox" Panel.ZIndex="1"/>
			<TextBlock Text="{Binding Path=DisplayName}" HorizontalAlignment="Stretch" Margin="88,23.393,24,0"
  				TextTrimming="CharacterEllipsis"
  				FontFamily="Calibri" Foreground="#FFDCDCDC"
  				VerticalAlignment="Top" x:Name="_displayName" FontSize="12" Height="24.607"/>				
