<Window x:Class="xeus.MessengerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:xeus.Controls"
    Title="xeus" Height="461" Width="222"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2006" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
    AllowDrop="False"
    SnapsToDevicePixels="True"
    Margin="4,4,4,4"
    >
	<Window.Background>
		<SolidColorBrush Color="#FF1E1E1E"/>
	</Window.Background>
  <Grid>
  	<Grid.RowDefinitions>
  		<RowDefinition Height="0.93*"/>
  		<RowDefinition Height="0.07*"/>
  	</Grid.RowDefinitions>
  		<local:RosterControl x:Name="_roster" Grid.Row="0" Width="Auto" Height="Auto"/>
  		<StatusBar Grid.Row="1" x:Name="_statusBar" Style="{DynamicResource StatusBarStyleBlack}">
  			<StatusBarItem HorizontalAlignment="Stretch" Margin="0,0,0,0"
  			 x:Name="_statusUnreadMessages" VerticalAlignment="Stretch"
  			 Grid.Row="1">
		  		<Grid d:IsLayer="True" x:Name="Status" Grid.ColumnSpan="1" Grid.RowSpan="3" Width="Auto" Height="Auto">
				  	<Grid.ColumnDefinitions>
				  		<ColumnDefinition Width="15"/>
				  		<ColumnDefinition Width="*"/>
				  	</Grid.ColumnDefinitions>
			  		<Button Grid.Column="0" Style="{DynamicResource MessageButtonStyleNoMessage}">
			  			<Path Fill="#FFA5D5F0" Stretch="Fill"
			  			Stroke="#FFCECECE" Width="14" Height="12.698" Data="F1 M-6,-6.8649998 L9,-6.8649998 C10.104569,-6.8649998 11,-5.9695697 11,-4.8649998 L11,1 C11,2.1045694 10.104569,3 9,3 L6.25,3 6.25,8.5 2.2968752,3 L-6,3 C-7.1045694,3 -8,2.1045694 -8,1 L-8,-4.8649998 C-8,-5.9695697 -7.1045694,-6.8649998 -6,-6.8649998 z" Margin="0,3,0,0" RenderTransformOrigin="0.5,0.5" Visibility="Visible" x:Name="path">
   			  				<Path.RenderTransform>
			  					<TransformGroup>
			  						<ScaleTransform ScaleX="1" ScaleY="1"/>
			  						<SkewTransform AngleX="0" AngleY="0"/>
			  						<RotateTransform Angle="0"/>
			  						<TranslateTransform X="0" Y="0"/>
			  					</TransformGroup>
			  				</Path.RenderTransform>
			  			</Path>
			  		</Button>
					<TextBlock Text="{Binding Path=MessageCenter.ChatMessages.Count}" 
					Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Left" Foreground="#FFFFFFFF" Margin="4,0,0,0" />
		 		</Grid>
  			 </StatusBarItem>
  		</StatusBar>
  </Grid>
</Window>

