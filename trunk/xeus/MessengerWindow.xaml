<Window x:Class="xeus.MessengerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:xeus.Controls"
    Title="xeus" Height="461" Width="222"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2006" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
    AllowDrop="False"
    SnapsToDevicePixels="True"
    Margin="4,4,4,4"
    >
	<Window.Background>
		<SolidColorBrush Color="#FF1E1E1E"/>
	</Window.Background>
  <Grid>
  	<Grid.RowDefinitions>
  		<RowDefinition Height="0.93*"/>
  		<RowDefinition Height="0.07*"/>
  	</Grid.RowDefinitions>
  		<local:RosterControl x:Name="_roster" Grid.Row="0" Width="Auto" Height="Auto"/>
  		<StatusBar Grid.Row="1" x:Name="_statusBar" Style="{DynamicResource StatusBarStyleBlack}">
  			<StatusBarItem HorizontalAlignment="Stretch" Margin="0,0,0,0"
  			 x:Name="_statusUnreadMessages" VerticalAlignment="Stretch"
  			 Grid.Row="1">
		  		<Grid d:IsLayer="True" x:Name="Status" Grid.ColumnSpan="1" Grid.RowSpan="3" Width="Auto" Height="Auto">
					<TextBlock Text="{Binding Path=MessageCenter.ChatMessages.Count}" VerticalAlignment="Stretch" HorizontalAlignment="Right" Margin="0,0,-93,0" Width="93" Height="Auto" />
		 		</Grid>
  			 </StatusBarItem>
  		</StatusBar>
  </Grid>
</Window>

