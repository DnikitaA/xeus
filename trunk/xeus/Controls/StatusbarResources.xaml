<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<!-- Resource dictionary entries should be defined here. -->
	<Style x:Key="StatusBarStyleBlack" TargetType="{x:Type StatusBar}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type StatusBar}">
					<Grid>
						<Border SnapsToDevicePixels="True" Margin="4,0,4,0" BorderBrush="#FF3B3B3B">
							<ItemsPresenter TextElement.Foreground="#FFFFFFFF"/>
						</Border>
						<Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Panel.ZIndex="-1" Fill="#41000000"/>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>