<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<!-- Resource dictionary entries should be defined here. -->
	<Style TargetType="{x:Type StatusBar}" x:Key="StatusBarStyleBlack">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type StatusBar}">
					<Border SnapsToDevicePixels="True" BorderThickness="0,1,0,0" Margin="4,0,4,0" BorderBrush="#FF3B3B3B">
						<ItemsPresenter TextElement.Foreground="#FFFFFFFF"/>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>