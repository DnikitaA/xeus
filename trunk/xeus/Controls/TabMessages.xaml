<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:local="clr-namespace:xeus.Core"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Microsoft_Windows_Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Classic">
	<!-- Resource dictionary entries should be defined here. -->

	<DataTemplate x:Key="RosterItemMessagesTemplate" DataType="{x:Type local:RosterItem}">
	<Grid Height="184">
		<TextBlock Text="{Binding Path=DisplayName}"
		 Width="320" Height="32" Background="#FF5BCB3A" FontSize="16" Foreground="#FFC72121" VerticalAlignment="Top" />

		<ListBox Margin="0,36,0,0" 
			ItemsSource="{Binding Path=Messages}" ItemTemplate="{StaticResource ChatMessageItem}" >
			<ListBox.ItemsPanel>
				<ItemsPanelTemplate>
					<StackPanel Orientation="Horizontal"/>
				</ItemsPanelTemplate>
			</ListBox.ItemsPanel>
		</ListBox>		
	</Grid>
	</DataTemplate>
	
</ResourceDictionary>