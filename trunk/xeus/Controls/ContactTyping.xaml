<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Class="xeus.Controls.ContactTyping"
    >
	<UserControl.Resources>
		<Storyboard x:Key="TimeLineWriteText" RepeatBehavior="Forever"/>
	</UserControl.Resources>
	<UserControl.Triggers>
		<EventTrigger RoutedEvent="FrameworkElement.Loaded">
			<BeginStoryboard Storyboard="{StaticResource TimeLineWriteText}"/>
		</EventTrigger>
	</UserControl.Triggers>
    <StackPanel Orientation="Horizontal">
    <Image IsEnabled="False" Width="17" Height="17" Source="..\Images\avatar.png"/>
    	<Border Background="#FF171717" BorderBrush="#FF3C3C3C" BorderThickness="1,1,1,1" CornerRadius="2,2,2,2" Margin="5,0,0,0" Width="22" Height="20" Padding="5,0,5,0">
    		<TextBlock IsEnabled="False" x:Name="_userName" FontSize="14" Foreground="#FFFFFFFF" MinWidth="20" Width="20"/>
    	</Border>
    </StackPanel>
</UserControl>
